<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        android:elevation="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/contentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/ivImage"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 hours ago"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tvChannel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:textStyle="bold"
                        android:text="BBC News"
                        android:textSize="12sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginTop="2dp"
                    android:textColor="#4987C2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Apple admits slowing down older iPhones"/>
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textColor="#87ceeb"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Customers have long suspected iPhones slow down over time.Now,Apple has confirmed some models do"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:src="@drawable/ic_launcher_background"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>